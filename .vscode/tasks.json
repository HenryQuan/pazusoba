{
    "version": "2.0.0",
    "tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++.exe build active file",
			"command": "g++.exe",
			"args": [
				"-Wall",
				"-Werror",
				"-g",
				"${workspaceFolder}\\main_v1.cpp",
				"${workspaceFolder}\\core\\v1\\*.cpp",
				"-o",
				"${fileDirname}\\debug.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}